<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainterminal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="-57dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="254dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="Hints: Click the images to start the games"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:text="Fun Maths Game"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="99dp"
                android:layout_height="87dp"
                android:layout_marginEnd="20dp"
                android:text="Compare Numbers"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@null"
                android:contentDescription="Compare Numbers"
                android:onClick="MathComparison"
                android:scaleType="fitCenter"
                android:src="@drawable/game1" />
        </LinearLayout>

        <!-- Row 2: Image + Text -->
        <LinearLayout
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="71dp"
                android:layout_marginEnd="20dp"
                android:text="Ordering of Numbers"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:contentDescription="Ordering of Numbers"
                android:onClick="MathOrdering"
                android:scaleType="fitCenter"
                android:src="@drawable/game2" />
        </LinearLayout>

        <!-- Row 3: Image + Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="81dp"
                android:layout_marginEnd="20dp"
                android:text="Composing Numbers"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@null"
                android:contentDescription="Composing Numbers"
                android:onClick="MathComposition"
                android:scaleType="fitCenter"
                android:src="@drawable/game3" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
